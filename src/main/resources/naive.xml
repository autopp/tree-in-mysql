<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tree.NaiveDivisionMapper">
  <insert id="addDivision" parameterType="tree.NaiveDivisionRepository$NaiveDivision">
    INSERT INTO division_naive (id, parent_id) VALUES (#{id}, #{parentId});
  </insert>
  <select id="getParentOf" resultType="map">
    SELECT d1.id, d1.parent_id FROM division_naive d1 LEFT OUTER JOIN division_naive d2 ON d1.id = d2.parent_id WHERE d2.id = #{id};
  </select>
</mapper>
